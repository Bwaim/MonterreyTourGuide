<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bwaim.monterreytourguide.ui.ListFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/cardViewMargin"
        android:layout_marginStart="@dimen/cardViewMargin"
        android:layout_marginTop="@dimen/cardViewMargin"
        app:cardCornerRadius="@dimen/cardViewRadius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_view_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleHeight"
                android:padding="@dimen/cardViewPaddingDefault"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/titleTextSize"
                tools:text="@string/restaurantTitle1" />

            <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageViewHeight"
                android:contentDescription="@string/descriptionImage"
                android:scaleType="centerCrop"
                tools:src="@drawable/monterrey_mexican_restaurant" />

            <TextView
                android:id="@+id/card_view_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/cardViewPaddingTopBottom"
                android:paddingEnd="@dimen/cardViewPaddingDefault"
                android:textColor="@color/colorAccent"
                android:paddingStart="@dimen/cardViewPaddingDefault"
                android:paddingTop="@dimen/cardViewPaddingTopBottom"
                android:textSize="@dimen/summaryTextSize"
                tools:text="@string/restaurantSummary1" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>